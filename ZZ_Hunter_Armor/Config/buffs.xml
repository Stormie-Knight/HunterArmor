<append xpath="/buffs/buff[@name='buffStatusCheck02']">
		<!-- *** HUNTER_SET_BONUS -->
		<effect_group>
			<!-- If armor set NOT complete, remove bonus buff -->
			<triggered_effect trigger="onSelfBuffUpdate" action="RemoveBuff" buff="buffHunterSetBonus">
				<requirement name="ArmorGroupCount" group_name="groupHunter" operation="LTE" value="3" />
				<requirement name="HasBuff" buff="buffHunterSetBonus"/>
			</triggered_effect>
			<!-- If armor set complete, add bonus buff -->
			<triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="buffHunterSetBonus">
				<requirement name="ArmorGroupCount" group_name="groupHunter" operation="Equals" value="4" />
				<requirement name="!HasBuff" buff="buffHunterSetBonus"/>
			</triggered_effect>
		</effect_group>
</append>

